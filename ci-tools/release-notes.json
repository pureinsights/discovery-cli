{
  "categories": [
    {
      "title": "## :rocket: Enhancements",
      "labels": ["enhancement","dependencies"]
    },
    {
      "title": "## :bug: Fixes",
      "labels": ["bug"]
    },
    {
      "title": "## :heavy_check_mark: Tests",
      "labels": ["qa"]
    },
    {
      "title": "## :memo: Documentation",
      "labels": ["documentation"]
    }
  ],
  "ignore_labels": [
    "automated"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "title"
  },
  "template": "${{CHANGELOG}}## :hammer: Others\n\n${{UNCATEGORIZED}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "base_branches": [
    "develop",
    "release\/(.)+",
    "hotfix\/(.)+"
  ],
  "label_extractor": [
    {
      "pattern": "^Update (.)+ dependency to (.)+$",
      "target": "automated",
      "on_property": "title"
    },
    {
      "pattern": "ci-pureinsights",
      "target": "automated",
      "on_property": "author"
    },
    {
      "pattern": "dependabot",
      "target": "dependencies",
      "on_property": "author"
    }
  ]
}